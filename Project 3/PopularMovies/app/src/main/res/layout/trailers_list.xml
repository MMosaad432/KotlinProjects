<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:background="#212121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/trailerThumbnailImageView"
            android:layout_width="220dp"
            android:layout_height="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/animated1" />

        <ImageView
            android:id="@+id/playImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_play_circle_filled_24dp"
            app:layout_constraintBottom_toTopOf="@+id/trailerThumbnailImageView"
            app:layout_constraintEnd_toStartOf="@+id/trailerThumbnailImageView"
            app:layout_constraintStart_toEndOf="@+id/trailerThumbnailImageView"
            app:layout_constraintTop_toBottomOf="@+id/trailerThumbnailImageView"
            app:srcCompat="@drawable/ic_launcher_foreground" />
        <TextView
            android:id="@+id/trailerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TrailerName"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorSecondaryText"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trailerThumbnailImageView" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>